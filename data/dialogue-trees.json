          "choices": [
            {
              "text": "Just a pint, please.",
              "nextNode": "simple_order",
              "requirements": []
            },
            {
              "text": "What's the mood like tonight?",
              "nextNode": "read_the_room",
              "requirements": []
            },
            {
              "text": "Heard anything interesting lately?",
              "nextNode": "fishing_for_info",
              "requirements": []
            },
            {
